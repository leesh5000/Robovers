# Production Environment Variables Example
# Copy this file to .env.production and fill in actual values

# Node Environment
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://robovers:your_password@robovers-postgres:5432/robovers
DB_NAME=robovers
DB_USER=robovers
DB_PASSWORD=your_secure_db_password

# Redis Configuration
REDIS_URL=redis://:your_redis_password@robovers-redis:6379
REDIS_HOST=robovers-redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key
JWT_EXPIRES_IN=7d

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Email Configuration (General)
EMAIL_FROM=noreply@robovers.com
EMAIL_FROM_NAME=Robovers

# Frontend URL
FRONTEND_URL=https://your-domain.com

# API URL (for frontend)
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# AWS ECR Repository (for deployment)
SERVER_ECR_REPOSITORY=123456789012.dkr.ecr.ap-northeast-2.amazonaws.com/robovers-backend
WEB_ECR_REPOSITORY=123456789012.dkr.ecr.ap-northeast-2.amazonaws.com/robovers-frontend